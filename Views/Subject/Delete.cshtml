@model MyUquvMarkaz.Models.Subject

@{
    ViewData["Title"] = "Delete Subject";
}

<h1>Delete Subject</h1>

<h3>Are you sure you want to delete this subject?</h3>
<div>
    <h4>Subject</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Teacher</dt>
        <dd class="col-sm-10">@Model.Teacher?.FullName</dd>

        <dt class="col-sm-2">Students Count</dt>
        <dd class="col-sm-10">@Model.Students?.Count ?? 0</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
